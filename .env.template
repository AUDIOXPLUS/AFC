# Template for environment variables
# Copy this file to .env and fill in the values if NOT using Docker Compose environment section

# Baidu Translate API Credentials
BAIDU_TRANSLATE_APP_ID=your_baidu_app_id
BAIDU_TRANSLATE_API_KEY=your_baidu_api_key

# Session Secret (replace with a strong, random string)
SESSION_SECRET=your-secret-key

# Database Path (optional, defaults to ./database/afc-v3.sqlite)
# DB_PATH=./database/afc-v3-prod.sqlite

# Server Port (optional, defaults to 3000)
# PORT=3001

# Node Environment (development or production)
NODE_ENV=development
